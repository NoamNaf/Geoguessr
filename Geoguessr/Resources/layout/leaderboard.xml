<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"> 
   
        <TableRow android:background="#51B435"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rank" /> 
           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Player"/>  
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Best Socre" /> 
        </TableRow> 
        <TableRow android:background="#F0F7F7"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"> 
           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/r1rank"/> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NoamNaf"
                android:id="@+id/r1name"/> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50000"
                android:id="@+id/r1score"/> 
  
        </TableRow> 
        <TableRow android:background="#F0F7F7"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:id="@+id/r2rank"/> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NoamNaf"
                android:id="@+id/r2name"/> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50000"
                android:id="@+id/r2score"/> 
  
        </TableRow> 
        <TableRow android:background="#F0F7F7"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:id="@+id/r3rank"/> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NoamNaf"
                android:id="@+id/r3name"/> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50000"
                android:id="@+id/r3score"/> 
  
        </TableRow> 
        <TableRow android:background="#F0F7F7"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"> 
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:id="@+id/r4rank"/> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NoamNaf"
                android:id="@+id/r4name"/> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50000"
                android:id="@+id/r4score"/> 
  
        </TableRow> 
        <TableRow android:background="#F0F7F7"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:id="@+id/r5rank"/> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NoamNaf"
                android:id="@+id/r5name"/> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50000"
                android:id="@+id/r5score"/> 
  
        </TableRow> 
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Menu"
            android:id="@+id/returnbtn"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="16dp"
            android:layout_marginTop="10dip"
            android:backgroundTint="#8B0000"/>
    </TableLayout> 
     <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/leaderboard"/>
</LinearLayout>