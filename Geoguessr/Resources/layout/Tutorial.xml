<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/loginbackground"
    tools:context="com.example.user.androidloginscreen.MainActivity">
    <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="30dp"
         app:cardCornerRadius="30dp"
         app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittext">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How To Play Geoguessr?"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="After you click play from the main page, you will be frawn in a random location in the world."/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This location has a google street view covrage, meaning you can look around, and sometimes move."/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Youre target is try to guess where you are by pressing the open map button in the bottom right of the screen, and pressing on the map."/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="After you press on a place on the map, a marker will be created where you clicked on the map, and you will be able to press the guess butto"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The maximum points you can get is 3000 points per round. There are 5 round total. The closer you guessed, the more points you will get."/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you are not sure where you are, you can press on the hint button, that will give you the country of the random location, but will decrease 1000 points of your round score."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The country will be written instead of the hint button."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="So lets have fun and explore the world!!!"/>
            
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:text="Main Page"
                android:id="@+id/mainpagebtn"
                android:backgroundTint="#8692f7"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
